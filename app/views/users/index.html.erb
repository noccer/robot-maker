<script>
  function initMap() {
    var myLatLng = {lat: -24.8304075, lng: 134.3195563};

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 4,
      center: myLatLng
    });

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Robots'
    });
  }
</script>
<script async defer
