<div class="form-card">
<h2>Robot Maker</h2>
  <% if session[:user_id].nil? %>
    <%= form_tag '/login' do %>
      <table>
        <tr>
          <td class="bold"> Username: </td> <td> <%= text_field_tag :username %> </td>
        </tr>
        <tr>
          <td class="bold"> Password: </td> <td> <%= password_field_tag :password %> </td>
        </tr>
        <tr>
          <td></td>
          <td><%= submit_tag "Log In" %></td>
        </tr>
      </table>
    <% end %>

  <br>Don't have an account? <%= link_to "Create one", {:controller => 'users', :action => 'new_user_form'}, method: :get %>

  <% else %>
    <p> You're logged in!<p>
    <%= link_to "Log Out", {:controller => 'sessions', :action => 'destroy'}, method: :post %>
    <%= link_to "My Robots", {:controller => 'robots', :action => 'index'}, method: :get %>
<% end %>
</div>

<div class="home-img"><img src="https://robohash.org/niall" alt=""></div>
