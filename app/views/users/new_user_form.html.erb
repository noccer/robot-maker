<div class="form-card">
  <h2>Register to build your Robot Army!</h2>

  <% if flash[:errors] %>
    <p> <%= flash[:errors]["message"].join(', ') %></p>
  <% end %>

  <%= form_for :user, url: '/users' do |f| %>
  <table>
    <tr>
      <td>Your Name:</td>
      <td><%= f.text_field :user_firstname %></td>
    </tr>
      <tr>
      <td>Email:</td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td>Username:</td>
      <td><%= f.text_field :username %></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td>Password confirmation:</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit("Register")%></td>
    </tr>
  </table>


  <% end %>
</div>
